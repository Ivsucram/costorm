<div id="login_top" class="row">
	<header>
		<form id="login_form">
			<div class="small-6 large-6 columns"></div>
			<div class="small-6 large-6 columns">
				<div class="small-2 large-2 columns">
					<span class="prefix">Sign in</span>
				</div>
				<div class="small-5 large-5 columns">
					<input name="emailNick" type="text" placeholder="Email/Nick"/>
				</div>
				<div class="small-5 large-5 columns">
					<div class="row collapse">
						<div class="small-9 large-9 columns">
							<input name="password" type="password" placeholder="Password"/>
						</div>
						<div class="small-3 large-3 columns">
							<input type="hidden" name="loginSubmit" value="true"/>
							<button class="button prefix" type="submit">Login</a>
						</div>
					</div>
				</div>
			</div>
		</form>
	</header>
</div>

<div id="login_content">
	<div class="row">
		<div id="logint_content_left" class="small-8 large-8 columns">
			<%=image_tag("logo_welcome.png", alt:"logo welcome")%>
			<div class="flex-video">
				<iframe witdth="560" height="315" src="http://www.youtube.com/embed/hXZjzrvuFXg" frameborder="0" allowfullscreen></iframe>
			</div>
		</div>

		<div id="login_content_right" class="small-4 large-4 columns">
			<%= form_for(@user, :html => { :id => "register_form" } ) do |f| -%>
			<h3> Sign-up</h3>
				<%= f.text_field :name, :placeholder => "Name" %><br />
				<%= f.text_field :nick, :placeholder => "Nick" %><br />
				<%= f.text_field :email, :placeholder => "Email" %><br />
				<%= f.date_select :birthday %><br />
				<%= f.password_field :password, :placeholder =>"Password" %><br />
				<%= f.password_field :confirmPassword, :placeholder =>"Confirm Password" %><br />
				<%= f.check_box :termflag %>I accept the terms<br /> 
				
				<ul class="button-group round even-2">
					<li><button type="submit" class="small button">Submit</button></li>
					<li><button type="reset" class="small button alert">Reset</button></li>
				</ul>
			<% end -%>
		</div>
	</div>
</div>

<div id="login_footer" class="row"></div>
